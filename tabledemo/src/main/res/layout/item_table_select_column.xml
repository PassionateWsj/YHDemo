<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ll_table_select_column"
              android:layout_width="match_parent"
              android:layout_height="60dp"
              android:layout_marginBottom="5dp"
              android:layout_marginLeft="5dp"
              android:layout_marginRight="5dp"
              android:layout_marginTop="5dp"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_table_select_column_select"
        android:src="@drawable/checkbox_unselected"
        android:scaleType="center"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/tv_table_select_column_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="上海"
        android:textColor="@color/co1_syr"/>

    <TextView
        android:id="@+id/tv_table_select_column_keyColumn"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="关键列"
        android:textColor="@color/co1_syr"
        android:visibility="visible"/>
    <ImageView
        android:id="@+id/iv_table_select_column_drag"
        android:src="@drawable/icon_drag"
        android:scaleType="center"
        android:background="@color/co10_syr"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:visibility="gone"/>


</LinearLayout>